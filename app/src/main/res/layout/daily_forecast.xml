<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">

    <TextView
        android:id="@+id/daily_date"
        style="@style/textView"
        android:layout_marginLeft="16dp"
        android:textAppearance="?android:textAppearanceSmall"
        android:layout_centerVertical="true"
        android:text="--/--"/>

    <TextView
        android:layout_toRightOf="@id/daily_date"
        android:layout_marginLeft="16dp"
        android:id="@+id/daily_day"
        style="@style/textView"
        android:textAppearance="?android:textAppearanceSmall"
        android:layout_centerVertical="true"
        android:text="@string/tomorrow"/>

    <ImageView
        android:id="@+id/daily_image"
        android:layout_centerHorizontal="true"
        android:src="@drawable/weather_sun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@id/daily_min"
        android:id="@+id/daily_max"
        style="@style/textView"
        android:textAppearance="?android:textAppearanceSmall"
        android:layout_centerVertical="true"
        android:text="--"/>
    <TextView
        android:layout_marginRight="16dp"
        android:layout_alignParentRight="true"
        android:id="@+id/daily_min"
        style="@style/textView"
        android:textAppearance="?android:textAppearanceSmall"
        android:layout_centerVertical="true"
        android:text="--"/>
</RelativeLayout>